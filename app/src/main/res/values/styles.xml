<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="OldAppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>

    <style name="EInkAppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppTheme.ActionBar</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="background">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="autoCompleteTextViewStyle">@style/eInkCursorColor</item>
    </style>

    <style name="MyEinkActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorControlNormal">#000000</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="tint">#000000</item>
        <item name="colorButtonNormal">#000000</item>
        <item name="color">#000000</item>
        <item name="iconTint">#000000</item>
        <item name="autoCompleteTextViewStyle">@style/eInkCursorColor</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="eInkCursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor_eink</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorControlNormal">@color/app_bar_icons_color</item>
        <item name="color">@color/app_bar_icons_color</item>
    </style>

    <style name="ThemeOverlay.AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#CDC9C9</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert"/>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- loader -->
        <item name="android:windowBackground">@drawable/loader_background_splash</item>
    </style>

    <style name="preferencesStyle"  parent="Theme.AppCompat.DayNight">
        <item name="android:tint">@color/icon_text_color</item>
    </style>
</resources>
