<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/testFlibustaIsUpProgress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/testFlibustaIsUpText"
        app:layout_constraintEnd_toStartOf="@+id/testFlibustaIsUpText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/testFlibustaIsUpText" />

    <TextView
        android:id="@+id/testFlibustaIsUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_flibusta_is_up"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/clientProgressText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBarCircle"
        app:layout_constraintVertical_chainStyle="packed" />

    <ProgressBar
        android:id="@+id/clientRunningProgress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/clientProgressText"
        app:layout_constraintEnd_toStartOf="@+id/clientProgressText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testFlibustaIsUpText" />

    <TextView
        android:id="@+id/clientProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/client_progress"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/connectionTestText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testFlibustaIsUpText" />

    <ProgressBar
        android:id="@+id/connectionTestProgress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/connectionTestText"
        app:layout_constraintEnd_toStartOf="@+id/connectionTestText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientProgressText" />

    <TextView
        android:id="@+id/connectionTestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_connection"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/app_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clientProgressText" />

    <TextView
        android:id="@+id/app_version"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/default_app_version"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/startConnectionTestBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/testStartApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_bg_bordered_button"
        android:padding="10dp"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:layout_marginBottom="10dp"
        android:shadowRadius="3"
        android:text="@string/force_start"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/startConnectionTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_bg_bordered_button"
        android:padding="10dp"
        android:shadowColor="#000000"
        android:layout_marginBottom="10dp"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:text="@string/start_connection_test_btn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/testStartApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/useHardwareAccelerationSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/use_hardware_acceleration_title"
        android:textColor="@color/dark_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isEbook" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/isEbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_ebook_title"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarCircle"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="300"
        android:progress="100"
        android:shadowColor="#000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textColor="@color/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/useHardwareAccelerationSwitcher" />

</androidx.constraintlayout.widget.ConstraintLayout>