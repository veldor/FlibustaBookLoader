<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/save_type_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_format"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/save_only_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_only_this_format"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_type_selection" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/redownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_redownload"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_only_selected" />

</android.support.constraint.ConstraintLayout>