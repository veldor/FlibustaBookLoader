<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/save_type_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_format"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/save_only_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_only_this_format"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_type_selection"
        android:gravity="center_horizontal" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/reDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/do_not_re_download"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_only_selected"
        android:gravity="center_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>